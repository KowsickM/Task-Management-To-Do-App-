@model TaskManagement_To_Do_Api_.Models.TaskModel

@{
    ViewData["Title"] = "Delete Task";
}

<div class="container mt-5" style="max-width: 600px;">
    <div class="card shadow-lg border-0 rounded-3">
        <!-- 🔴 Red Header -->
        <div class="card-header bg-danger text-white text-center py-3">
            <h4 class="mb-0">Delete Task</h4>
        </div>

        <div class="card-body p-4">
            @if (TempData["errorMessage"] != null)
            {
                <div class="alert alert-danger">@TempData["errorMessage"]</div>
            }

            <form asp-action="DeleteTask">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-bold">Title</label>
                    <input asp-for="Title" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3" readonly></textarea>
                </div>

                <div class="mb-3">
                    <label asp-for="Status" class="form-label fw-bold">Status</label>
                    <input asp-for="Status" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="CreatedAt" class="form-label fw-bold">Created Time</label>
                    <input asp-for="CreatedAt" class="form-control" readonly />
                </div>

                <div class="alert alert-warning text-center fw-semibold">
                    ⚠️ Are you sure you want to delete this task?
                    <br />This action cannot be undone.
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="List" class="btn btn-secondary px-4">Cancel</a>
                    <button type="submit" class="btn btn-danger px-4">Delete Task</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
