<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


@model IEnumerable<TaskManagement_To_Do_Api_.Models.TaskModel>

@{
    ViewData["Title"] = "Task List";
}

<div class="container mt-5">
    <div class="card shadow border-0 rounded-3">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center flex-wrap">
            <h4 class="mb-0">Task List</h4>

            <div class="d-flex align-items-center">
                

                <form asp-action="List" method="get" class="d-flex align-items-center">
    <a href="@Url.Action("List")" class="btn btn-sm btn-light d-flex align-items-center me-2">
                        <i class="bi bi-arrow-counterclockwise fw-semibold"></i>
    </a>

                    <select name="status" class="form-select form-select-sm me-2 fw-semibold" onchange="this.form.submit()">
                        <option value="">All status</option>
                        <option value="Pending" selected="@(ViewBag.SelectedStatus == "Pending" ? "selected" : null)">Pending</option> 
                        <option value="InProgress" selected="@(ViewBag.SelectedStatus == "InProgress" ? "selected" : null)">In Progress</option> 
                        <option value="Completed" selected="@(ViewBag.SelectedStatus == "Completed" ? "selected" : null)">Completed</option> </select>

    <input type="text" name="search" value="@ViewBag.SearchQuery"
                           class="form-control form-control-sm me-2 mb-2 mb-sm-0 fw-semibold"
           placeholder="Search by title..."
           oninput="delayedSubmit(this.form)" />
</form>


                <a asp-action="CreateTasks" class="btn btn-light btn-sm fw-semibold ms-2">+ Add Task</a>
            </div>

        </div>

        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0 align-middle">
                        <thead class="table-light">
                            <tr class="text-center text-secondary">
                                <th>Title</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th>Created At</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="text-center">
                                    <td class="fw-semibold">@item.Title</td>
                                    <td>@item.Description</td>
                                    <td>
                                        <span class="badge
                                            @(item.Status == TaskManagement_To_Do_Api_.Models.TaskStatus.Completed ? "bg-success" :
                                              item.Status == TaskManagement_To_Do_Api_.Models.TaskStatus.Pending ? "bg-warning text-dark" :
                                              item.Status == TaskManagement_To_Do_Api_.Models.TaskStatus.InProgress ? "bg-info text-dark" :
                                              "bg-secondary")">
                                            @item.Status
                                        </span>
                                    </td>
                                    <td>@item.CreatedAt.ToString("dd-MMM-yyyy hh:mm tt")</td>
                                  
                                    @* <td>
                                        <a asp-action="EditTasks" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>

                                        <button type="button"
                                                class="btn btn-sm btn-outline-danger ms-1"
                                                data-bs-toggle="modal"
                                                data-bs-target="#deleteModal"
                                                data-id="@item.Id">
                                            Delete
                                        </button>
                                    </td> *@
                                    <td>
                                        <a asp-action="EditTasks" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>

                                        <!-- 🔽 Button to trigger modal -->
                                        <button type="button"
                                                class="btn btn-sm btn-outline-danger ms-1"
                                                data-bs-toggle="modal"
                                                data-bs-target="#deleteModal-@item.Id">
                                            Delete
                                        </button>
                                    </td>
                                </tr>

                                <!-- 🔽 Delete Confirmation Modal (INSIDE foreach) -->
                                <div class="modal fade" id="deleteModal-@item.Id" tabindex="-1" aria-labelledby="deleteModalLabel-@item.Id" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content border-0 shadow-sm">
                                            <div class="modal-header bg-primary text-white">
                                                <h5 class="modal-title" id="deleteModalLabel-@item.Id">Confirm Delete</h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                Are you sure you want to delete the task <strong>@item.Title</strong>?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>

                                                <form asp-action="DeleteTask" asp-route-id="@item.Id" method="post">
                                                    <button type="submit" class="btn btn-danger">Delete</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                                }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="p-4 text-center text-muted">
                    <i class="bi bi-clipboard-x" style="font-size: 1.5rem;"></i>
                    <p class="mt-2 mb-0">No tasks found.</p>
                </div>
            }
        </div>
    </div>
</div>


@section Scripts {
    

    <script>
        @if (TempData["successMessage"] != null)
        {
                <text>
                    Swal.fire({
                        title: "Success!",
                        text: "@TempData["successMessage"]",
                        icon: "success",
                        confirmButtonColor: "#3085d6",
                        confirmButtonText: "OK"
                    });
                </text>
        }

        @if (TempData["errorMessage"] != null)
        {
                <text>
                    Swal.fire({
                        title: "Error!",
                        text: "@TempData["errorMessage"]",
                        icon: "error",
                        confirmButtonColor: "#d33",
                        confirmButtonText: "OK"
                    });
                </text>
        }
    </script>
}




<style>
    .table th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
    }

    .table td {
        vertical-align: middle;
    }

    .btn-sm {
        padding: 4px 10px;
    }

    .card {
        border-radius: 12px;
    }

    .form-select-sm {
        width: 150px;
    }
</style>

<script>
    let submitTimer;
    function delayedSubmit(form) {
        clearTimeout(submitTimer);
        submitTimer = setTimeout(function () {
            form.submit();
        }, 650); 
    }
</script>

